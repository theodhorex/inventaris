if __name__ == "__main__":
    pq = PriorityQueue()
    print("Masukkan 3 pasien")
    
    for _ in range(3):
        pasien = input("Nama pasien: ")
        
        # Step 1: Respiratory Check
        kecepatan = int(input("Kecepatan Respirasi per menit: "))
        if kecepatan == 0:
            pq.enqueue(3, pasien)  # Status Hitam (Sudah meninggal)
            continue
        elif kecepatan < 10 or kecepatan > 30:
            pq.enqueue(2, pasien)  # Status Merah
            continue
        
        # Step 2: Pulse Check
        denyut = input("Denyut lemah/tidak terasa (y/n): ").strip().lower()
        if denyut == "y":
            pq.enqueue(2, pasien)  # Status Merah
            continue
        
        # Step 3: Mental Status Check
        diperintah = input("Apakah bisa diperintah? (y/n): ").strip().lower()
        if diperintah == "y":
            pq.enqueue(1, pasien)  # Status Kuning
        else:
            pq.enqueue(2, pasien)  # Status Merah

    print("\n=== HASIL DATA PASIEN ===")
    print_pasien(pq)
