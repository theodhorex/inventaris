class PriorityQueueSorted:
    def __init__(self):
        self.queue = []

    def is_empty(self):
        """Check if the queue is empty."""
        return len(self.queue) == 0

    def len(self):
        """Return the length of the queue."""
        return len(self.queue)

    def remove(self):
        """Remove the highest priority item from the queue."""
        if not self.is_empty():
            return self.queue.pop(0)  # Remove the first element
        else:
            raise Exception("Queue is empty")

    def peek(self):
        """Return the highest priority item without removing it."""
        if not self.is_empty():
            return self.queue[0]  # Return the first element
        else:
            raise Exception("Queue is empty")

    def add(self, item, priority):
        """Add an item to the queue with the given priority."""
        self.queue.append((item, priority))
        self.queue = self.quick_sort(self.queue)

    def quick_sort(self, queue):
        """Sort the queue using Quick Sort algorithm."""
        if len(queue) <= 1:
            return queue
        else:
            pivot = queue[len(queue) // 2][1]
            left = [x for x in queue if x[1] > pivot]  # Greater than pivot
            middle = [x for x in queue if x[1] == pivot]  # Equal to pivot
            right = [x for x in queue if x[1] < pivot]  # Less than pivot
            return left + middle + right

    def print_all(self):
        """Return the contents of the queue sorted from highest to lowest priority."""
        return [(item, priority) for item, priority in self.queue]

# Test case
if __name__ == "__main__":
    myQueue = PriorityQueueSorted()

    myQueue.add('Gian', 2)
    myQueue.add('Kezia', 4)
    print(myQueue.print_all())
    print(myQueue.peek())
    print()

    myQueue.add('Glen', 8)
    myQueue.add('Christo', 1)
    print(myQueue.print_all())
    print(myQueue.peek())
    print()

    print("========REMOVE========")
    myQueue.remove()
    print(myQueue.print_all())
    print()

    myQueue.remove()
    print(myQueue.print_all())
    print()

    myQueue.remove()
    print(myQueue.print_all())
    print()

    myQueue.add('Saya', 7)
    print(myQueue.print_all())
