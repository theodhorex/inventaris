<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minggu10.MahasiswaViewController">
   <MenuBar>
     <menus>
       <Menu mnemonicParsing="false" text="File">
         <items>
           <MenuItem mnemonicParsing="false" text="Close" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Edit">
         <items>
           <MenuItem mnemonicParsing="false" text="Delete" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Help">
         <items>
           <MenuItem mnemonicParsing="false" onAction="#onMenuAboutClicked" text="About" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
    <GridPane accessibleHelp="120" accessibleText="120" vgap="5.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="0.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="20.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label text="NIM:" />
            <Label text="Nama:" GridPane.rowIndex="2" />
            <Label text="Nilai:" GridPane.rowIndex="3" />
            <TextField fx:id="txtNim" promptText="NIM" GridPane.columnIndex="1" />
            <TextField fx:id="txtNama" promptText="Nama" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="txtNilai" promptText="Nilai" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <Label text="Foto" GridPane.rowIndex="4" />
         <VBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <children>
               <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               <Button mnemonicParsing="false" onAction="#onBtnUbahFoto" text="Ubah Foto" />
            </children>
         </VBox>
        </children>
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
    </GridPane>
    <HBox>
        <children>
            <Button fx:id="btnAdd" onAction="#onBtnAddClick" text="Simpan">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="btnHapus" onAction="#onBtnHapusClick" text="Hapus">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="btnSaveFile" mnemonicParsing="false" onAction="#onBtnSaveFileClick" text="Save to File">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="btnClose" mnemonicParsing="false" onAction="#onBtnCloseClick" text="Close" />
        </children>
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
    </HBox>
   <HBox>
      <children>
         <TextField fx:id="searchBox" HBox.hgrow="ALWAYS" />
         <Button mnemonicParsing="false" onAction="#onClickBersihkan" text="Bersihkan" />
      </children>
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
   </HBox>
    <TableView fx:id="table" layoutY="163.2">
        <columns>
            <TableColumn fx:id="nim" prefWidth="50" text="Nim" />
            <TableColumn fx:id="nama" prefWidth="200" text="Nama" />
            <TableColumn fx:id="nilai" prefWidth="200" text="Nilai" />
        </columns>
    </TableView>
    <Label fx:id="lblInfo" text="Count: ">
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin></Label>
    <HBox>
        <children>
            <Button fx:id="btnOpen" mnemonicParsing="false" onAction="#onOpenBtnClick" text="Open Window">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Button>
        </children>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" />
      </VBox.margin>
    </HBox>
</VBox>
